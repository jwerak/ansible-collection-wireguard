[connection]
id=wg0
type=wireguard
interface-name=wg0
autoconnect={{ wireguard_autoconnect }}

[wireguard]
listen-port=51820
private-key={{ wireguard_private_key }}
{% for peer in wireguard_peers %}

[wireguard-peer.{{ peer.public_key }}]
allowed-ips={{ peer.allowed_ips }};
{% endfor %}

[ipv4]
address1={{ wireguard_address }}
method=manual

[ipv6]
addr-gen-mode=default
method=disabled

[proxy]